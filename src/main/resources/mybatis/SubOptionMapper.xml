<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.deliveryfood.mapper.SubOptionMapper">

    <select id="findSubOptionById" parameterType="com.deliveryfood.dto.SubOptionDto" resultType="com.deliveryfood.dto.SubOptionInput">
        SELECT * FROM sub_options
        WHERE option_id = #{optionId}
        AND menu_id = #{menuId}
    </select>

</mapper>